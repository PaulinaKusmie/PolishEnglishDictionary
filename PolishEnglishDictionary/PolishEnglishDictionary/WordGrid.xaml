    <ContentPage.Content >
        <StackLayout>
            <ListView ItemsSource="{Binding Employees}" HasUnevenRows="True" SeparatorVisibility="None">
                <ListView.ItemTemplate>

                    <DataTemplate>
                        <ViewCell>
                            <Grid Padding="10" >
                              
                                <Frame CornerRadius="10" >
                                    <Frame.Background>
                                        <LinearGradientBrush  StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="MediumVioletRed" Offset="0"/>
                                            <GradientStop Color="Bisque" Offset="0.445"/>
                                            <GradientStop Color="#651A4A" Offset="0.53"/>
                                        </LinearGradientBrush>
                                    </Frame.Background>
                                    <StackLayout>
                                        <StackLayout Orientation="Horizontal">
                                            
                                            <Label VerticalOptions="Center" Text="{Binding EnglishWord}" FontSize="Large"></Label>
                                            <Image Source="edit.png" VerticalOptions="EndAndExpand" 
                                                WidthRequest="40"
                                                HeightRequest="40"/>
                                        </StackLayout>
                                        <StackLayout Orientation="Horizontal">
                                            <Label VerticalOptions="Center" Text="{Binding PolishWord}" FontSize="Large"></Label>
                                            <Image Source="trash.png" VerticalOptions="EndAndExpand" 
                                                 WidthRequest="40"
                                                HeightRequest="40"/>
                                        </StackLayout>
     
                                    </StackLayout>
                                </Frame>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
                
                
            </ListView>




        </StackLayout>
    </ContentPage.Content>
    
    
    
